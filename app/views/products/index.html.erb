<% if user_signed_in?%>
  |<%= link_to "Add Product", new_product_path if can? :create, @products %>
<%end%>

<!--%= @users.inspect %-->
<div class="container">
<table class="table table-striped">
	<tr>
	    <th>Images</th>
		<th>Name</th>
		<th>Brand</th>
		<th>Price</th>
		<th>Size</th>
		</tr>
<% @product.each do | i | %>
	<tr>  
	  <td>
	  <% unless i.images.blank? %>
	    <% i.images.each do | image |%>
          <%= image_tag image.photo(:thumb)%>
	    <%end%>
	  <%end%>
	  </td>
      <td><%= i.name %></td>
      <td><%= i.brand %></td>
      <td><%= i.prize %></td>
      <td><%= i.size %></td>
    
<%end%>
</table>
</div>