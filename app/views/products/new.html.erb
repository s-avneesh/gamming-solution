<%= form_for @product do |f|%>
<% if @product.errors.any? %>
  <% @product.errors.messages.each do |key,msg |%>
    <ul>
    <li><%= "#{key} : " + msg.first%></li>
    </ul>
  <%end%>
<%end%>
<table  class="table table-striped">
  <tr>
  <td><%= f.label :name%></td>
  <td><%= f.text_field :name%></td>
  </tr>
  <tr>
  <td><%= f.label :brand%></td>
  <td><%= f.text_field :brand%></td>
  </tr>
  <tr>
  <td><%= f.label :prize%></td>
  <td><%= f.text_field :prize%></td>
  </tr>
  <tr>
  <td><%= f.label :size%></td>
  <td><%= f.select :size, %w(S M L XS XM XL )%></td>
  </tr>
  <%= f.fields_for :image do | image |%>
     <tr>
     <td><%= image.label :photo%></td>
     <td><%= image.file_field :photo, multiple: true%></td>
     </tr>
  <%end%>
    <tr>
  <td><%= f.submit "Add Product"%></td>
  </tr>
</table>
<%end%>

<%= link_to "<<back", products_path%>